{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "jsx": "react",
    "moduleResolution": "node",
    "paths": {
      "*": ["src/*"]
    },
    "sourceMap": true,
    "target": "es5",
    "lib": ["es6", "dom", "es2017"]
  },
  "exclude": ["node_modules", "build", "dist"]
}
